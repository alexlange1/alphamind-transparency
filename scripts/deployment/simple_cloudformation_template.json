{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Simple Emissions Collector Lambda Function",
  "Resources": {
    "EmissionsCollectorRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "SimpleEmissionsCollectorRole",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
        ]
      }
    },
    "EmissionsCollectorFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "SimpleEmissionsCollector",
        "Runtime": "python3.9",
        "Handler": "lambda_function.lambda_handler",
        "Role": {
          "Fn::GetAtt": [
            "EmissionsCollectorRole",
            "Arn"
          ]
        },
        "Code": {
          "ZipFile": "dummy"
        },
        "Timeout": 300,
        "MemorySize": 512,
        "Environment": {
          "Variables": {
            "PYTHONPATH": "/var/task"
          }
        }
      }
    },
    "EmissionsCollectorRule": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "Name": "SimpleEmissionsCollectorRule",
        "Description": "Daily emissions collection at 16:00 UTC",
        "ScheduleExpression": "cron(0 16 * * ? *)",
        "State": "ENABLED",
        "Targets": [
          {
            "Id": "EmissionsCollectorTarget",
            "Arn": {
              "Fn::GetAtt": [
                "EmissionsCollectorFunction",
                "Arn"
              ]
            }
          }
        ]
      }
    },
    "EmissionsCollectorPermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Fn::GetAtt": [
            "EmissionsCollectorFunction",
            "Arn"
          ]
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "events.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "EmissionsCollectorRule",
            "Arn"
          ]
        }
      }
    }
  },
  "Outputs": {
    "FunctionName": {
      "Description": "Lambda Function Name",
      "Value": {
        "Ref": "EmissionsCollectorFunction"
      }
    },
    "FunctionArn": {
      "Description": "Lambda Function ARN",
      "Value": {
        "Fn::GetAtt": [
          "EmissionsCollectorFunction",
          "Arn"
        ]
      }
    }
  }
}